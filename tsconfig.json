{
  "extends": "./node_modules/@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["svelte"]
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "exclude": ["node_modules/*", "dist/*"]
}
